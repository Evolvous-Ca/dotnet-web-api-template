{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Overrides": {
        "Microsoft": "warning",
        "Microsoft.Hosting.Lifetime": "warning"
      }
    },
    "writeTo": [
      {"Name": "Console"},
      {
        "Name": "File",
        "Args": {
          "path": "../logs/webapi-.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss:fff zzz} {CorrelationId} {Level: u3}] {Username} {Message}"
        }
      }
    ]
  }
}
